<%- include("./partials/header.ejs") %>

<section id="mainbody" class="d-flex flex-row">
    <%- include("./partials/sidebar.ejs") %>
    <section id="rightmain" class="d-flex flex-row flex-shrink-0 py-3 px-5" style="width: 75%;"> 
        <div class="d-flex flex-column p-5 flex-shrink-0 align-content-start" style="width: 100%;">
            <% if (currentPost === []) { %>
                <h1 id="postTitle" class="fw-bold">placeholder</h1>
                <% } else { %>
                        <h1 class="fw-bold postTitle"><%= currentPost[0] %></h1>
                <% } %>
                
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-12">
                            <% if (currentPost === []) { %>
                                <p id="postTime" class="time1">placeholder</p>
                                <% } else { %>
                                        <p class="time1">Created:<%= currentPost[3] %></p>
                                <% } %>
                        </div>
                        <div class="col-12">
                            <% if (currentPost === []) { %>
                                <p id="postEdit" class="time1"> </p>
                                <% } else { %>
                                        <p class="time1">Last updated:<%= currentPost[4] %></p>
                                <% } %>
                        </div>
                    </div>
                </div> 
                <div class="col-sm-6">
                    <div class="row">
                        <form action="/delete/<%= encodeURIComponent(currentPost[0]) %>" method="POST" class="col-lg-4 col-12 d-flex justify-content-center align-items-start pb-3" >
                            <input type="submit" value="Delete Post" class="btn btn-outline-secondary " style="height: 40px;">
                        </form>
                        <form action="/edit/<%= encodeURIComponent(currentPost[0]) %>" method="POST" class="col-lg-4 col-12 d-flex justify-content-center" >
                            <input type="submit" value="Edit Post" class="btn btn-outline-secondary " style="height: 40px;">
                        </form>
                    </div>
                </div>
            </div>
    
            <hr class="darkHr">

            <% if (currentPost === []) { %>
                <p name="body">placeholder</p>
                <% } else { %>
                        <p class="body1"><%- currentPost[1] %></p>
                <% } %>
            
            
            <hr class="darkHr">
            <div class="d-flex justify-content-center pt-5">
                <button onclick="location.href = '/'" class="btn btn-outline-darkgray col-12 col-sm-6">Back to Homepage</button>
            </div>
        </div>
        
    </section>


</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</main>

</body>

</html>